{
  "name": "travel-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "predev": "pnpm --filter @travel-planner/shared build",
    "dev": "concurrently -n \"shared,web,backend\" -c \"yellow,blue,green\" \"pnpm --filter @travel-planner/shared build:watch\" \"pnpm --filter web dev\" \"pnpm --filter backend dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:web": "pnpm --filter web dev",
    "dev:ngrok": "ngrok http 4000 --authtoken $NGROK_SECRET_KEY --pool 3",
    "dev:all": "concurrently -n \"shared,web,backend,ngrok\" -c \"yellow,blue,green,magenta\" \"pnpm --filter @travel-planner/shared build:watch\" \"pnpm --filter web dev\" \"pnpm --filter backend dev\" \"ngrok http 4000\"",
    "build": "pnpm --filter @travel-planner/shared build && pnpm --filter web build && pnpm --filter backend build",
    "build:backend": "pnpm --filter @travel-planner/shared build && pnpm --filter backend build",
    "build:web": "pnpm --filter @travel-planner/shared build && pnpm --filter web build",
    "start:prod": "pnpm --filter backend start:prod",
    "db:generate": "pnpm --filter @travel-planner/database generate",
    "db:migrate": "pnpm --filter @travel-planner/database migrate",
    "db:push": "pnpm --filter @travel-planner/database push",
    "db:seed": "pnpm --filter @travel-planner/database seed",
    "db:studio": "pnpm --filter @travel-planner/database studio",
    "db:reset": "pnpm --filter @travel-planner/database reset",
    "lint": "pnpm --filter web lint && pnpm --filter backend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules apps/web/.next apps/backend/dist packages/shared/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "pnpm": "^10.28.1",
    "prisma": "^7.2.0"
  },
  "packageManager": "pnpm@10.25.0"
}
