{
  "name": "travel-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"backend,web,ngrok\" -c \"blue,cyan,green\" \"pnpm --filter backend dev\" \"pnpm --filter web dev\" \"ngrok http 4000\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:web": "pnpm --filter web dev",
    "dev:ngrok": "ngrok http 4000",
    "build": "turbo build",
    "build:backend": "turbo build --filter=backend",
    "build:web": "turbo build --filter=web",
    "db:generate": "turbo db:generate --filter=@travel-planner/database",
    "db:migrate": "turbo db:migrate --filter=@travel-planner/database",
    "db:push": "turbo db:push --filter=@travel-planner/database",
    "db:seed": "turbo db:seed --filter=@travel-planner/database",
    "db:studio": "turbo db:studio --filter=@travel-planner/database",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.7.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "pnpm": "^10.28.1",
    "prisma": "^7.2.0"
  },
  "packageManager": "pnpm@10.25.0"
}
