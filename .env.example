# TRANSv2 - Global Environment Variables
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Database Configuration (if using PostgreSQL)
# POSTGRES_USER=transv2
# POSTGRES_PASSWORD=secure-password
# POSTGRES_DB=transv2_db
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Service Ports (for reference)
SERVICE_AUTH_PORT=3000
SERVICE_CHAT_PORT=3001
SERVICE_GAME_PORT=3002
SERVICE_USER_PORT=3003

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# Logging
LOG_LEVEL=debug

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=http://localhost,http://localhost:80

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (optional)
# ENABLE_MONITORING=false
# SENTRY_DSN=

# Email Configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# File Storage (if using S3 or similar)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=transv2-uploads
