# Service Chat Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Database Configuration
# DATABASE_URL=postgresql://user:password@localhost:5432/chat_db

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/socket.io

# Service URLs
SERVICE_AUTH_URL=http://service-auth:3000
SERVICE_USER_URL=http://service-user:3003

# Logging
LOG_LEVEL=debug

# Chat Settings
MAX_MESSAGE_LENGTH=2000
CHAT_HISTORY_LIMIT=100
